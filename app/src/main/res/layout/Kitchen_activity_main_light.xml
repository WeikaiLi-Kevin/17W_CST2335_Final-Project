<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamwork.final_project.kitchen_main_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light ON/OFF"
        android:textSize="18dp"
        android:id="@+id/light_intro"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/light_switch"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter dimmable value"
        android:id="@+id/light_dim"
        android:inputType="numberDecimal"
        android:layout_below="@+id/light_switch"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_adjust"
        android:visibility="invisible"
        android:id="@+id/pros_bar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dim Light"
        android:id="@+id/light_adjust"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/light_dim"
        android:layout_alignParentStart="true" />

</RelativeLayout>
